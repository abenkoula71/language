{
    "name": "aplus/language",
    "type": "library",
    "description": "Aplus Framework Language Library",
    "keywords": [
        "language",
        "lang",
        "locale",
        "localization",
        "internationalization",
        "i18n",
        "l10n",
        "intl"
    ],
    "homepage": "https://aplus-framework.gitlab.io/docs/language",
    "license": "MIT",
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-intl": "*",
        "aplus/helpers": "^2.1"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.8",
        "ergebnis/composer-normalize": "^2.15",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Framework\\Language\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Language\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "email": "natanfelles@gmail.com",
        "issues": "https://gitlab.com/aplus-framework/libraries/language/issues",
        "wiki": "https://gitlab.com/aplus-framework/libraries/language/wikis/home",
        "source": "https://gitlab.com/aplus-framework/libraries/language",
        "docs": "https://aplus-framework.gitlab.io/libraries/language/docs/"
    }
}
